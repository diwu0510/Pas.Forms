@model Db

@{
    Layout = "_Layout";
    ViewData["Title"] = "编辑数据库";
}

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <h1 class="form-box-title">@ViewData["Title"]</h1>
    <hr/>
    <div class="form-box-fixed-container">
        <div class="form-box">
            <div class="row">
                <div class="label"><span class="font-red">*</span> 数据库名称</div>
                <div class="control">
                    <input type="text" asp-for="Title" isvalid="yes" checkexpession="NotNull" autofocus="autofocus" />
                </div>
            </div>
            <div class="row">
                <div class="label"><span class="font-red">*</span> 连接字符串</div>
                <div class="control">
                    <textarea rows="4" asp-for="ConnectionString" isvalid="yes" checkexpession="NotNull"></textarea>
                </div>
            </div>
        </div>
    </div>

    <div class="form-box-fixed-foot row content-right">
        <input type="submit" value="提交" class="btn btn-blue"/>
        <input id="btn-closeSelf" type="button" value="关闭" class="btn btn-red btn-close"/>
    </div>
</form>

@section scripts {
    <script src="~/lib/validator/validator.js"></script>
    <script>
        myUI.initForm({ pageType: "pop" });
    </script>
}