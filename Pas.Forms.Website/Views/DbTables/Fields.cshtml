@model List<DbField>

@{
    ViewData["Title"] = "数据库管理";
    Layout = "_Layout";
}
<table class="table table-bordered">
    <thead>
    <tr>
        <th>标题</th>
        <th>名称</th>
        <th>类型</th>
        <th>忽略</th>
        <th>关联表</th>
        <th>关联字段</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var row in Model)
        {
            <tr>
                <td>@row.Title</td>
                <td>@row.Field</td>
                <td>@row.Type</td>
                <td>
                    @if (row.InsertIgnore)
                    {
                        <span>插入时</span>
                    }
                    @if (row.UpdateIgnore)
                    {
                        <span>更新时</span>
                    }
                </td>
                <td>@row.ForeignTable</td>
                <td>@row.ForeignField</td>
            </tr>
        }
    </tbody>
</table>