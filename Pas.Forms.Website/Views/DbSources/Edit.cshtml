@model DbSource

@{
    Layout = "_Layout";
    ViewData["Title"] = "创建数据源";
}
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <h1 class="form-box-title">@ViewData["Title"]</h1>
    <hr/>
    <div class="form-box-fixed-container">
        <div class="form-box">
            <div class="row">
                <div class="label"><span class="font-red">*</span> 数据库</div>
                <div class="control">
                    <select asp-for="DbId" asp-items="(List<SelectListItem>)ViewBag.Dbs" isvalid="yes" checkexpession="NotNull" autofocus="autofocus"></select>
                </div>
            </div>
            <div class="row">
                <div class="label"><span class="font-red">*</span> 数据源标题</div>
                <div class="control">
                    <input type="text" asp-for="Title" isvalid="yes" checkexpession="NotNull">
                </div>
            </div>
            <div class="row">
                <div class="label"><span class="font-red">*</span> 数据列标题</div>
                <div class="control">
                    <input type="text" asp-for="Fields" isvalid="yes" checkexpession="NotNull" placeholder="用 | 分割">
                </div>
            </div>
            <div class="row">
                <div class="label"><span class="font-red">*</span> SQL语句</div>
                <div class="control">
                    <textarea rows="6" asp-for="Sql" isvalid="yes" checkexpession="NotNull"></textarea>
                </div>
            </div>
        </div>
    </div>

    <div class="form-box-fixed-foot row content-right">
        <input type="submit" value="提交" class="btn btn-blue"/>
        <input id="btn-closeSelf" type="button" value="关闭" class="btn btn-red btn-close"/>
    </div>
</form>

@section scripts {
    <script src="~/lib/validator/validator.js"></script>
    <script>
        myUI.initForm({ pageType: "pop" });
    </script>
}